<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
  android:background="#FF6633"
    android:layout_height="60dp">
<LinearLayout
    android:id="@+id/ll_header_left_container"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_main_city"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="北京"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/ic_arrow_down_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:background="@drawable/tv_search_shape"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/navibar_icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:hint="输入商户名、地点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/iv_add_main"
        android:layout_gravity="center"
        android:src="@drawable/home_navibar_icon_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>