<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#fcfcfc"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/in_detail_back"
    android:layout_marginLeft="15dp"
    android:layout_gravity="left|center_vertical"
    android:src="@drawable/yy_calendar_icon_previous"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_detail_share"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_action_share_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_detail_favorite"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_action_favorite_off_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_detail_more"
        android:layout_marginRight="15dp"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/title_icon_more_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>